<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #ffffff;" prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marketing.desktop.controller.ConfiguracaoAdminController">

    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
    </padding>

    <Label text="Novo Administrador" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="22.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <Label text="Preencha os dados para criar o acesso inicial" textFill="#95a5a6" wrapText="true" textAlignment="CENTER">
        <VBox.margin>
            <Insets bottom="20.0" />
        </VBox.margin>
    </Label>

    <TextField fx:id="txtNome" promptText="Nome Completo" style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />

    <TextField fx:id="txtCpf" promptText="CPF (apenas nÃºmeros)" style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />

    <TextField fx:id="txtEmail" promptText="E-mail Corporativo" style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />

    <TextField fx:id="txtTelefone" promptText="Telefone" style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />

    <PasswordField fx:id="txtSenha" promptText="Senha Segura" style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />

    <Button text="CADASTRAR ADMIN" onAction="#cadastrarAdmin"
            maxWidth="Infinity"
            style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 5; -fx-cursor: hand;">
        <VBox.margin>
            <Insets top="15.0" />
        </VBox.margin>
    </Button>

</VBox>